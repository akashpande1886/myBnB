<%- include('../partials/head') %>

<body>
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-8">Register your home</h1>

    <form action="/host/add-home" method="POST" class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-lg">
      <div class="mb-6">
        <label for="houseName" class="block text-gray-700 font-medium mb-2">House Name</label>
        <input type="text" _id="houseName" name="houseName" placeholder="Enter the name of your house" required 
          class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-red-500 focus:outline-none" />
      </div>

      <div class="mb-6">
        <label for="price" class="block text-gray-700 font-medium mb-2">Price per Night</label>
        <div class="relative">
          <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-600">â‚¹</span>
          <input type="number" _id="price" name="price" placeholder="Amount" min="0" required
            class="w-full pl-8 pr-4 py-3 rounded-md border border-gray-300 focus:border-red-500 focus:outline-none" />
        </div>
      </div>

      <div class="mb-6">
        <label for="location" class="block text-gray-700 font-medium mb-2">Location</label>
        <input type="text" _id="location" name="location" placeholder="City, Country" required
          class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-red-500 focus:outline-none" />
      </div>

      <div class="mb-6">
        <label for="rating" class="block text-gray-700 font-medium mb-2">Rating</label>
        <select _id="rating" name="rating" required class="w-full px-4 py-3 rounded-md border border-gray-300">
          <option value="">Choose rating</option>
          <option value="1">1 Star</option>
          <option value="2">2 Stars</option>
          <option value="3">3 Stars</option>
          <option value="4">4 Stars</option>
          <option value="5">5 Stars</option>
        </select>
      </div>

      <div class="mb-6">
        <label for="imageUrl" class="block text-gray-700 font-medium mb-2">Property Image URL</label>
        <input type="url" _id="imageUrl" name="imageUrl" placeholder="https://example.com/image.jpg" 
          pattern="https?://.+" title="Please enter a valid image URL starting with http:// or https://" required
          class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-red-500 focus:outline-none" />
      </div>

      <button type="submit" 
        class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-4 rounded-md transition duration-300">
        Register Property
      </button>
    </form>
  </main>
</body>

</html>
