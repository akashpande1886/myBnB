<%- include('../partials/head') %>

    <body>
        <%- include('../partials/nav') %>

            <main class="container mx-auto px-4 py-8">
                <h1 class="text-3xl font-bold text-center mb-8">
                    <%= editing? "Edit" :"Register" %>
                        your home details
                </h1>

                <form action="/host/<%=editing?"edit-home" :"add-home" %>" method="POST" class="max-w-2xl mx-auto
                    bg-white p-8 rounded-lg shadow-lg">
                    <div class="mb-6">
                        <input
                        type="hidden"
                        name="id"
                        value="<%= editing ? home.id:''%>"/>
                        <label for="houseName" class="block text-gray-700 font-medium mb-2">House Name</label>
                        <input 
                        type="text" 
                        value="<%=editing ?home.houseName:'' %>"
                        id="houseName" 
                        name="houseName" 
                        placeholder="Enter the name of your house"
                        required
                        class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-red-500 focus:outline-none" />
                    </div>

                    <div class="mb-6">
                        <label for="price" class="block text-gray-700 font-medium mb-2">Price per Night</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-600">$</span>
                            <input type="number" id="price" value="<%=editing ?home.price:'' %>"  name="price" placeholder="Amount" min="0" required
                                class="w-full pl-8 pr-4 py-3 rounded-md border border-gray-300 focus:border-red-500 focus:outline-none" />
                        </div>
                    </div>

                    <div class="mb-6">
                        <label for="location" class="block text-gray-700 font-medium mb-2">Location</label>
                        <input type="text" id="location" name="location" placeholder="City, Country" required value="<%=editing ?home.location:'' %>" 
                            class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-red-500 focus:outline-none" />
                    </div>

                    <div class="mb-6">
                        <label for="rating" class="block text-gray-700 font-medium mb-2">Rating</label>
                        <input id="rating" name="rating" required value="<%=editing ?home.rating:'' %>" 
                        class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-red-500 focus:outline-none" >
                          
                        </input>
                    </div>

                    <div class="mb-6">
                        <label for="imageUrl" class="block text-gray-700 font-medium mb-2">Property Image URL</label>
                        <input type="url" id="imageUrl" name="imageUrl" placeholder="https://example.com/image.jpg"
                        value="<%=editing ?home.imageUrl:'' %>" 
                            pattern="https?://.+"
                            title="Please enter a valid image URL starting with http:// or https://" required
                            class="w-full px-4 py-3 rounded-md border border-gray-300 focus:border-red-500 focus:outline-none" />
                    </div>

                    <button type="submit"
                        class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-4 rounded-md transition duration-300">
                        <%= editing?"Update" :"Register" %> 
                    </button>
                </form>
            </main>
    </body>

    </html>